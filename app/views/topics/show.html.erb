<div class="main blurb">
  <p id="notice"><%= notice %></p>

  <h2>Let's hear it!</h2>
  <p>
  <b>Sing...</b>
  &#8220;<%= @topic.title %>&#8221;
  </p>

  <p>
  <b>By the one and only...</b>
  <%= @topic.description %>
  </p>
  <% unless(@topic.url.nil?) %>
    <p>
    <%= youtube_embed(@topic.url).html_safe %>
    </p>
  <% end %>
  <p>
  <strong><%= @topic.votes.length %> <span class="heart">&#x2665;</span>'s</strong>
  | Add your
  <%= link_to '+1', votes_path(:topic_id => @topic), :method => :post %>.
  </p>

  <div><%= link_to 'Edit', edit_topic_path(@topic) %> | 
  <%= link_to 'Back', topics_path %></div>
  
  <h2>Comments</h2>
  <%= raw(disqus_thread) %>

</div>
